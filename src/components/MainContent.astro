---
import Nav from "./Nav.astro";
import ViewSection from "./ViewSection.astro";
import LanguageIcon from "../icons/LanguageIcon.astro";
import BookIcon from "../icons/BookIcon.astro";
import OpenSourceIcon from "../icons/OpenSourceIcon.astro";

import { advantages } from "../helpers/data";
import CodeWrapper from "./Code.astro";
import { Code } from "astro/components";



---

<div class="w-full ml-[300px] mr-0 max-[850px]:ml-0 flex-1 overflow-hidden min-h-screen bg-slate-50/50 dark:bg-slate-950/20">
    <Nav />
    <ViewSection />
    
    <div class="pb-24">
        <div class="flex flex-col items-center gap-3 my-5">
            <span class="px-4 py-1.5 rounded-full bg-blue-500/5 dark:bg-blue-500/10 border border-blue-500/10 dark:border-blue-500/20 text-[10px] font-bold uppercase tracking-[0.2em] text-blue-600 dark:text-blue-400">
                Why SomGlossary?
            </span>
            <h2 class="text-3xl md:text-4xl font-extrabold text-slate-900 dark:text-white tracking-tight text-center px-4">
                Faa'iidooyinka <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">SomGlossary</span>
            </h2>
        </div>

        <ul class="flex flex-wrap items-center justify-center gap-8 px-6 w-full items-stretch">
            {
                advantages && advantages.map((advantage, index) => (
                    <li class="group relative list-none h-full w-full max-w-[350px]">
                        <div class="relative h-full overflow-hidden rounded-2xl border border-slate-200/50 dark:border-slate-800/50 bg-white/40 dark:bg-slate-900/40 backdrop-blur-md p-6 flex flex-col gap-5 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_20px_40px_rgba(0,0,0,0.08)] dark:hover:shadow-[0_20px_40px_rgba(0,0,0,0.3)] hover:border-blue-500/30">
                            <!-- Icon Container -->
                            <div class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all duration-500 group-hover:scale-110 group-hover:rotate-3 shadow-sm ${
                                index === 0 ? "bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20" :
                                index === 1 ? "bg-purple-500/10 text-purple-600 dark:text-purple-400 border border-purple-500/20" :
                                "bg-emerald-500/10 text-emerald-600 dark:text-emerald-400 border border-emerald-500/20"
                            }`}>
                                {index === 0 ? <LanguageIcon /> : index === 1 ? <BookIcon /> : <OpenSourceIcon />}
                            </div>

                            <div class="flex flex-col gap-2">
                                <h3 class="text-lg font-bold text-slate-900 dark:text-white tracking-tight group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300 line-clamp-1">
                                    {advantage.title}
                                </h3>
                                <p class="text-xs leading-relaxed text-slate-600 dark:text-slate-400 italic font-medium">
                                    {advantage.description}
                                </p>
                            </div>

                            <!-- Decorative Accent -->
                            <div class={`absolute bottom-0 left-0 h-1 transition-all duration-500 w-0 group-hover:w-full ${
                                index === 0 ? "bg-blue-500" :
                                index === 1 ? "bg-purple-500" :
                                "bg-emerald-500"
                            }`}></div>
                        </div>
                    </li>
                ))
            }
        </ul>

        <div class="flex flex-col items-center gap-3 my-16">
            <span class="px-4 py-1.5 rounded-full bg-slate-500/10 dark:bg-slate-500/20 border border-slate-500/10 dark:border-slate-500/20 text-[10px] font-bold uppercase tracking-[0.2em] text-slate-600 dark:text-slate-400">
                Participation
            </span>
            <h2 class="text-3xl md:text-4xl font-extrabold text-slate-900 dark:text-white tracking-tight text-center px-4">
                Ka qayb qaado <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400">SomGlossary</span>
            </h2>
            <p class="mt-4 max-w-2xl text-center text-slate-600 dark:text-slate-400 leading-relaxed">
                SomGlossary waa mashruuc furan (open source). Waxaad naga caawin kartaa inaan ballaarino qaamuuska.
            </p>

            <div class="w-full max-w-5xl px-6 mt-8 flex justify-center">
                <CodeWrapper filename="Terminal">
                    <Code code={`git clone https://github.com/Adam-Elmi/SomGlossary
cd SomGlossary

# Using Bun
bun install
bun dev

# Or Using NPM
npm install
npm run dev`} lang="bash" theme="github-dark" />
                </CodeWrapper>
            </div>
        </div>
    </div>
</div>
