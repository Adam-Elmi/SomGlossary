---
import Nav from "./Nav.astro";
import ViewSection from "./ViewSection.astro";
import LanguageIcon from "../icons/LanguageIcon.astro";
import BookIcon from "../icons/BookIcon.astro";
import OpenSourceIcon from "../icons/OpenSourceIcon.astro";
import Block from "./Block.astro";
import Text from "./Text.astro";
import Hightlight from "./Hightlight.astro";
const reasons_SomGlossary = [
    {
        title: "Af-Soomaali",
        description: "Erayo tiknoolaji ah oo lagu sharaxay Af-Soomaali.",
    },
    {
        title: "Kobcinta Aqoon Tiknoolajiyeed",
        description:
            "Kor u qaadaysa fahamka tiknoolajiga ee bulshada Soomaaliyeed.",
    },
    {
        title: "Open Source",
        description:
            "Qof walbana wuu ka qayb qaadan kara ama wax wu ku dari karaa.",
    },
];
---

<div class="w-full ml-[300px] mr-0 max-[850px]:ml-0 flex-1 overflow-hidden">
    <Nav />
    <ViewSection />
    <div class="p-2">
        <h1
            class="dark:text-white dark:border-slate-800 text-center text-xl font-bold italic text-slate-600 border-b-2 border-indigo-100 w-fit m-auto p-2"
        >
            Faa'iidooyinka SomGlossary
        </h1>
        <ul class="flex gap-4 p-4 flex-wrap w-full justify-center items-center">
            {
                reasons_SomGlossary
                    ? reasons_SomGlossary.map((reason, index) => (
                          <li class="dark:text-white dark:border-slate-600 max-w-[350px] w-full min-h-[100px] dark:bg-slate-800 bg-indigo-50 flex gap-2 flex-col border-2 border-slate-300 p-2 rounded-md">
                              <span class="italic font-bold dark:text-slate-300 text-slate-700 flex gap-2 items-center">
                                  {index === 0 ? (
                                      <LanguageIcon />
                                  ) : index === 1 ? (
                                      <BookIcon />
                                  ) : (
                                      <OpenSourceIcon />
                                  )}
                                  {reason.title}
                              </span>
                              <p class="dark:text-slate-300 text-slate-600">
                                  {reason.description}
                              </p>
                          </li>
                      ))
                    : null
            }
        </ul>
    </div>
    
</div>
