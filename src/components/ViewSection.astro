---
import SearchComponent from "./SearchComponent.astro";

const matches = import.meta.glob("../pages/glossary/*.mdx");
const totalTerms = Object.keys(matches).length;
---

<section
    class="pattern relative w-full overflow-hidden border-b border-slate-200 dark:border-slate-800/60 bg-white dark:bg-slate-950 py-10 md:py-14"
>
    <div
        class="absolute inset-0 -z-10 opacity-[0.3] dark:opacity-[0.15] [mask-image:radial-gradient(ellipse_at_center,black_60%,transparent_100%)]"
    >
        <svg
            class="h-full w-full"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <defs>
                <pattern
                    id="dot-pattern"
                    x="0"
                    y="0"
                    width="20"
                    height="20"
                    patternUnits="userSpaceOnUse"
                >
                    <circle
                        cx="2"
                        cy="2"
                        r="1"
                        fill="currentColor"
                        class="text-slate-300 dark:text-slate-700"></circle>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#dot-pattern)"></rect>
        </svg>
    </div>

    <div
        class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
    >
        <div
            class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-blue-200 to-blue-500 opacity-15 dark:opacity-5 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"
        >
        </div>
    </div>

    <div class="relative z-10 mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex flex-col items-center justify-center text-center">
            <div
                class="mb-6 flex animate-fade-in items-center gap-2 rounded-full border border-blue-500/20 bg-blue-50/30 dark:bg-blue-500/5 px-3 py-1 text-[9px] font-bold uppercase tracking-widest text-blue-600 dark:text-blue-400 backdrop-blur-sm shadow-sm transition-transform hover:scale-105 cursor-default"
            >
                <span class="relative flex h-1.5 w-1.5">
                    <span
                        class="absolute inline-flex h-full w-full animate-ping rounded-full bg-blue-400 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex h-1.5 w-1.5 rounded-full bg-blue-500"
                    ></span>
                </span>
                {totalTerms} Erayo Ayaa La Turjumay
            </div>

            <h1
                class="max-w-4xl text-2xl font-extrabold tracking-tight text-slate-900 dark:text-white sm:text-4xl lg:text-4xl"
            >
                Ku dhawow <span
                    class="font-['Grand_Hotel'] text-blue-500 inline-block rotate-[-2deg] px-2 drop-shadow-sm transition-transform hover:rotate-0 duration-500"
                    >SomGlossary</span
                >
            </h1>

            <p
                class="mt-4 max-w-2xl text-base leading-7 text-slate-600 dark:text-slate-400 font-medium italic"
            >
                Boggan waxaad ka heli doontaa ereyo tiknoolajiyeed iyo
                macnahooda, oo si faahfaahsan oo af-Soomaali ah loo turjumay.
            </p>

            <div
                class="mt-8 w-full max-w-[600px] transform hover:scale-[1.01] transition-all duration-300"
            >
                <SearchComponent showPlaceholder={true} />
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(-8px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fade-in 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
</style>
