---
import SearchIcon from "../icons/SearchIcon.astro";
const {
    maxWidth = "500px",
    height = "auto",
    showButton = false,
    placeholder = "Search...",
} = Astro.props;
---

<div
    style={{ maxWidth: maxWidth ? maxWidth : "500px", height: height }}
    id="search-container"
    class="w-full dark:bg-slate-900/10 dark:border-slate-700/50 border-2 p-1 border-slate-200 rounded-md bg-white flex gap-2 items-center"
>
    <span id="search-icon" class="pl-2 cursor-pointer">
        <SearchIcon color="#ddd" />
    </span>
    <input
        readonly="true"
        id="search-input"
        type="search"
        class="w-full max-w-full p-2 rounded-md outline-none dark:text-slate-50 italic font-[500]"
        placeholder={placeholder}
    />
    {
        showButton ? (
            <button class="bg-blue-500 dark:bg-gradient-to-r from-blue-800 to-indigo-900 dark:border-slate-700 font-bold italic p-2 rounded-md text-slate-100 cursor-pointer hover:bg-blue-600 border-[1.5px] border-slate-200">
                Search
            </button>
        ) : null
    }
</div>
<script src="../js/handleSearch.js"></script>
