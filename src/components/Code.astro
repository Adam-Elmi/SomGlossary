---
import Copy2Icon from "../icons/Copy2Icon.astro";
const { filename = "" } = Astro.props;
---

<div class="w-[1000px] max-w-full bg-[#101012] border-2 border-slate-800/70 my-3">
    <!-- Header -->
    <div
        class="p-2 flex justify-between items-center border-b-2 border-slate-800/50"
    >
        <span class="text-slate-500 text-sm font-mono">{filename}</span>
        <button id="copy-btn" class="cursor-pointer">
            <span
                id="copy-icon-holder"
                class="hover:text-slate-500 text-slate-300"
            >
                <Copy2Icon />
            </span>
        </button>
    </div>
    <!-- Body -->
    <div id="code-node" class="p-2 bg-[#161616] overflow-auto">
        <slot />
    </div>
</div>

<script src="../helpers/copyText.ts"></script>