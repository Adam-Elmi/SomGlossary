---
import { Image as AstroImage } from "astro:assets";
const { src, alt, caption, parentClass, width = 100, height = 100, ...props } = Astro.props;
---

<div class={`modern-image-component relative my-2 ${parentClass || ""}`}>
    <div class="relative overflow-hidden p-[15px] rounded-2xl border border-slate-200/60 dark:border-slate-800/60 bg-white/5 backdrop-blur-sm transition-all duration-500">
        <AstroImage
            src={src}
            alt={alt}
            width={width}
            height={height}
            class="block transition-transform duration-700 mx-auto"
            {...props}
        />
    </div>

    {
        caption && (
            <div class="mt-4 px-2">
                <p class="text-[10px] md:text-xs font-bold uppercase tracking-[0.25em] text-slate-400 dark:text-slate-500 border-l-2 border-blue-500/40 pl-4 italic leading-relaxed">
                    {caption}
                </p>
            </div>
        )
    }
</div>
